<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IsaacPickAndBan.ViewModels"
             xmlns:model="clr-namespace:IsaacPickAndBan.Models"
             x:DataType="local:MainViewModel"
             x:Class="IsaacPickAndBan.MainPage">

    <Grid>
        <!--LIST OF CARDS-->
        <ScrollView BackgroundColor="White">
            <FlexLayout BindableLayout.ItemsSource="{Binding ListOfCards}"
                        JustifyContent="SpaceBetween"
                        Wrap="Wrap"
                        Direction="Row">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="model:Card">
                    
                        <Grid RowDefinitions="150"
                                Margin="5">
                            <Image Source="{Binding Image}"/>
                            <Button BackgroundColor="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainViewModel}}, Path=FocusingOnCardCommand}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </ScrollView>

        <!--CARD DETAILS-->
        <Grid IsVisible="{Binding IsFocused}">
            <Button BackgroundColor="Black"
                    Opacity="0.85"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainViewModel}}, Path=ClearFocusCommand}"/>
            <ImageButton x:Name="focusedCardImageButton"
                         Source="{Binding FocusedCard.Image}"
                         Command="{Binding TurnFocusedCard}"
                         HeightRequest="460"
                         Margin="30"/>
        </Grid>
    </Grid>

</ContentPage>
